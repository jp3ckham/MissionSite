@model MissionSite2.Models.Mission

@{
    ViewBag.Title = "Mission";
}
<!--This view shows a form with a dropdown list of missions, the mission the user selects is then passed 
    to the SelectedMissionController to dynamically create a FAQ view-->
<div class="container">
        <div class="form-group">
            @Html.LabelFor(model => model.MissionName, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownListFor(model => model.MissionName, new SelectList(ViewBag.Missions, "MissionName", "MissionName"))
                @Html.ValidationMessageFor(model => model.MissionName, "", new { @class = "text-danger" })
            </div>
            <input type="submit" value="Submit" />
        </div>
</div>